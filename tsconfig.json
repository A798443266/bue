{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"typeRoots": ["./types"]
	},
	"locale": "zh-CN",
	"include": ["src/**/*", "example/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
